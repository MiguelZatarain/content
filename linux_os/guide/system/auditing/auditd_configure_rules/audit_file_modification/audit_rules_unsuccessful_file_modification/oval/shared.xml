    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_test check="all" comment="audit /etc/issue augenrules" id="test_audit_rules_unsuccessful_file_modification_eperm_32" version="1">
    <ind:object object_ref="object_audit_rules_unsuccessful_file_modification_eperm_32" />
  </ind:textfilecontent54_test>
