<def-group>
  <definition class="compliance" id="audit_rules_sudolog" version="1">
    <metadata>
      <title>Record system admin actions(sudolog)</title>
      <affected family="unix">
        <platform>multi_platform_fedora</platform>
        <platform>multi_platform_ol</platform>
        <platform>multi_platform_rhel</platform>
        <platform>multi_platform_sle</platform>
      </affected>
      <description>Record system admin actions(sudolog)</description>
    </metadata>

    <!-- Test the auditctl case -->
    <criteria operator="AND">
      <criterion comment="audit selinux changes auditctl" test_ref="test_audit_rules_sudolog" />
    </criteria>
  </definition>


  <ind:textfilecontent54_test check="all" comment="audit selinux changes auditctl" id="test_audit_rules_sudolog" version="1">
    <ind:object object_ref="object_audit_rules_sudolog" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_audit_rules_sudolog" version="1">
    <ind:filepath>/etc/audit/audit.rules</ind:filepath>
    <ind:pattern operation="pattern match">^[\s]*-w[\s]+/var/log/sudo.log[\s]+-p[\s]+wa[\s]+-k[\s]+actions[\s]*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>


</def-group>
