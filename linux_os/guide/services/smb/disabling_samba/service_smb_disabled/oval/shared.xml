<def-group>
  <definition class="compliance" id="service_smb_disabled" version="1">
    <metadata>
      <title>Service smb Disabled</title>
      <affected family="unix">
        <platform>multi_platform_sle</platform>
        <platform>multi_platform_all</platform>
      </affected>
      <description>The smb service should be disabled if possible.</description>
    </metadata>
    <criteria comment="package smb removed or service smb is not configured to start" operator="OR">
      <criterion comment="smb removed" test_ref="test_service_smb_package_smb_removed" />
      <criteria operator="AND" comment="service smb is not configured to start">
        <criterion comment="smb is not running" test_ref="test_service_not_running_smb" />
      </criteria>
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="none_exist" comment="/var/log files permissions" id="test_service_not_running_smb" version="1">
    <unix:object object_ref="object_service_not_running_smb" />
  </unix:file_test>

  <unix:file_object comment="/var/log files" id="object_service_not_running_smb" version="1">
    <unix:behaviors recurse="directories" recurse_direction="down" max_depth="-1" recurse_file_system="local" />
    <unix:path operation="equals">/etc/systemd/system</unix:path>
    <unix:filename operation="pattern match">^smb\.(service|socket)$</unix:filename>
  </unix:file_object>


  <linux:rpminfo_test check="all" check_existence="none_exist"
  id="test_service_smb_package_smb_removed" version="1"
  comment="package smb is removed">
    <linux:object object_ref="obj_test_service_smb_package_smb_removed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_test_service_smb_package_smb_removed" version="1">
    <linux:name>samba</linux:name>
  </linux:rpminfo_object>


</def-group>
