<def-group>
  <definition class="compliance" id="ntpd_restrict_options" version="2">
    <metadata>
      <title>Specify ntp restrictions</title>
      <affected family="unix">
        <platform>multi_platform_fedora</platform>
        <platform>multi_platform_ol</platform>
        <platform>multi_platform_rhel</platform>
        <platform>multi_platform_sle</platform>
      </affected>
      <description>Specify ntp restrictions</description>
    </metadata>
    <criteria comment="ntp.conf conditions are met" operator="AND">
      <criterion test_ref="test_ntpd_restrict_options_4" />
      <criterion test_ref="test_ntpd_restrict_options_6" />
      <criterion test_ref="test_ntpd_options" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" check_existence="at_least_one_exists"
  comment="Ensure restrict options are set" id="test_ntpd_restrict_options_4"
  version="1">
    <ind:object object_ref="obj_ntpd_restrict_options_4" />
    <ind:state state_ref="state_ntpd_restrict_options_4" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object comment="Ensure restrict options are set"
  id="obj_ntpd_restrict_options_4" version="1">
    <ind:filepath>/etc/ntp.conf</ind:filepath>
    <ind:pattern operation="pattern match">^[ ]*restrict[ ]+\-4[ ]+(.*)[ ]*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_state id="state_ntpd_restrict_options_4" version="1">
    <ind:subexpression operation="pattern match">default[ ]+kod[ ]+limited[ ]+nomodify[ ]+notrap[ ]+nopeer</ind:subexpression>
  </ind:textfilecontent54_state>





  <ind:textfilecontent54_test check="all" check_existence="at_least_one_exists"
  comment="Ensure restrict options are set" id="test_ntpd_restrict_options_6"
  version="1">
    <ind:object object_ref="obj_ntpd_restrict_options_6" />
    <ind:state state_ref="state_ntpd_restrict_options_6" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object comment="Ensure restrict options are set"
  id="obj_ntpd_restrict_options_6" version="1">
    <ind:filepath>/etc/ntp.conf</ind:filepath>
    <ind:pattern operation="pattern match">^[ ]*restrict[ ]+\-6[ ]+(.*)[ ]*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_state id="state_ntpd_restrict_options_6" version="1">
    <ind:subexpression operation="pattern match">default[ ]+kod[ ]+limited[ ]+nomodify[ ]+notrap[ ]+nopeer</ind:subexpression>
  </ind:textfilecontent54_state>




  <ind:textfilecontent54_test check="all" check_existence="at_least_one_exists"
  comment="Ensure restrict options are set" id="test_ntpd_options"
  version="1">
    <ind:object object_ref="obj_ntpd_options" />
    <ind:state state_ref="state_ntpd_options" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object comment="Ensure restrict options are set"
  id="obj_ntpd_options" version="1">
    <ind:filepath>/etc/sysconfig/ntp</ind:filepath>
    <ind:pattern operation="pattern match">^NTPD_OPTIONS[ ]*=[ ]*["](.*)["][ ]*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_state id="state_ntpd_options" version="1">
    <ind:subexpression operation="pattern match">[ ]*\-u[ ]+ntp:ntp[ ]*</ind:subexpression>
  </ind:textfilecontent54_state>



</def-group>
